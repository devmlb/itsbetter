{
    "manifest_version": 3,
    "name": "ItsBetter",
    "version": "1.2.0",
    "description": "Improve your Itslearning experience",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs",
        "webNavigation",
        "alarms"
    ],
    "action": {
        "default_title": "ItsBetter",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/itsbetter-icon-16.png",
        "32": "icons/itsbetter-icon-32.png",
        "48": "icons/itsbetter-icon-48.png",
        "128": "icons/itsbetter-icon-128.png"
    },
    "web_accessible_resources": [
        {
        "resources": ["/mods/*", "update.html", "/mdui/*", "/icons/*", "https://devmlb.github.io/itsbetter/*"],
        "matches": ["<all_urls>"]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "scripts": ["background.js"]
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "itsbetter@mlb",
            "update_url": "https://example.com/updates.json"
        }
    }
}